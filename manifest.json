{
  "manifest_version": 3,
  "name": "Media Sniffer Pro",
  "version": "1.0",
  "description": "Captura avan√ßada de URLs m3u8, TS e MP4.",
  "permissions": [
    "webRequest",
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["injected.js"],
      "world": "MAIN",
      "run_at": "document_start"
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  }
}
